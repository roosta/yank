{
  "description": "Yank current page URL and title to clipboard as various markup formats",
  "manifest_version": 2,
  "name": "yank",
  "version": "2.0.0",
  "homepage_url": "https://github.com/roosta/yank#readme",
  "icons": {
    "48": "icons/icon-light.svg",
    "96": "icons/icon-light.svg"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": ["background/index.js"]
  },
  "commands": {
    "yank": {
      "suggested_key": {
        "default": "Ctrl+Y"
      },
      "description": "Yank page URL and title to clipboard"
    }

  },
  "browser_action": {
    "default_title": "Yank format",
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon-dark.svg",
      "32": "icons/icon-dark.svg"
    },
    "theme_icons": [
      {
        "light": "icons/icon-light.svg",
        "dark": "icons/icon-dark.svg",
        "size": 16
      },
      {
        "light": "icons/icon-light.svg",
        "dark": "icons/icon-dark.svg",
        "size": 32
      }
    ],
    "default_popup": "popup.html"
  },
  "applications": {
    "gecko": {
      "id": "yank@roosta.sh"
    }
  }
}
